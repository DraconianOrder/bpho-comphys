#:kivy 2.2.1


<Frame>:
	# sidebar: sidebar
	# collapse_btn: collapse_btn
	# placeholder: placeholder
	orientation: "horizontal"


<Main>:
	a1: presets
	a2: custom
	a3: additional
	a4: display
	orientation: "vertical"
	min_space: self.height / 12

	AccordionItem:
		id: presets
		presets_menu: pm
		title: "Presets"
		min_space: self.accordion.height / 12
		ScrollView:
			do_scroll_x: False
			do_scroll_y: True
			PresetsMenu:
				id: pm

	AccordionItem:
		id: custom
		custom_menu: c
		title: "Custom"
		min_space: self.accordion.height / 12
		ScrollView:
			do_scroll_x: False
			do_scroll_y: True
			CustomMenu:
				id: c

	AccordionItem:
		id: additional
		add_menu: addm
		title: "Additional options"
		min_space: self.accordion.height / 12
		ScrollView:
			do_scroll_x: False
			do_scroll_y: True
			AddMenu:
				id: addm

	AccordionItem:
		id: display
		title: "View"
		min_space: self.accordion.height / 12
		Viewer
